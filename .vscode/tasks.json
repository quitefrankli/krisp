{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build all",
			"type": "shell",
			"command": "meson install -C build",
			"group": {
				"kind": "build",
				"isDefault": true
			},
		},
		{
			"label": "build krisp",
			"type": "shell",
			"command": "meson compile -C build krisp",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "build space",
			"type": "shell",
			"command": "meson compile -C build space",
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}